

<section class="b-search" style="background-color: #fff !important">
  <div class="container">
    <br></br>
    <form action="/buycar/result" method="POST" class="b-search__main-form">
      <div class="row">
        <div class="col-xs-12 col-md-8">
          <div class="m-firstSelects">
            <div class="col-xs-4">
              <select name="select1">
                <option value="0" selected="selected">Depreciation</option>
                <option value="1" >$250 / year</option>
                <option value="2" >$500 / year</option>
                <option value="3" >$750 / year</option>
                <option value="4" >$1000 / year</option>
              </select>
              <span class="fa fa-caret-down"></span>
            </div>
            <div class="col-xs-4">
              <select name="select2">
                <option value="0" selected="selected">Registration Year</option>
                <option value="1" >2000 - 2015</option>
                <option value="2" >2015 - 2010</option>
                <option value="3" >2010 - 2015</option>
                <option value="3" >2015 - 2020</option>
              </select>
              <span class="fa fa-caret-down"></span> 
            </div>
            <div class="col-xs-4">
              <select name="select3">
                <option value="1" selected="selected">Transmission</option>
                <option value="2">Automatic</option>
                <option value="3">Manual</option> 
              </select>
              <span class="fa fa-caret-down"></span> 
            </div>
          </div>
          <div class="m-secondSelects">
            <div class="col-xs-4">
              <select name="select4">
                <option value="0" selected="selected">Type</option>
                <option value="1">Type A</option>
                <option value="2">Type B</option>
                <option value="3">Type C</option>
                <option value="4">Type D</option>
                <option value="5">Type E</option>
              </select>
              <span class="fa fa-caret-down"></span>
            </div>
            <div class="col-xs-4">
              <select name="select5">
                <option value="0" selected="selected">Brand / Model</option>
                <option value="1">Brand A</option>
                <option value="2">Brand B</option>
                <option value="3">Brand C</option>
                <option value="4">Brand D</option>
              </select>
              <span class="fa fa-caret-down"></span>
            </div>
          </div>
          <div class="col-xs-4">
              <select name="select6">
                <option value="0" selected="selected">Owner</option>
                <option value="1">Self Ownership</option>
                <option value="2">Company</option>
              </select> 
              <span class="fa fa-caret-down"></span>
          </div>
        </div>
        <div class="col-md-4 col-xs-12 text-left s-noPadding">
          <div class="b-search__main-form-range">
            <label>PRICE RANGE</label>
            <div class="slider"></div>
            <input type="hidden" name="min" class="j-min" value="1000" />
            <input type="hidden" name="max" class="j-max" value="100000" />
          </div>
          <div class="b-search__main-form-submit">
            <button type="submit" class="btn m-btn">Search the Vehicle<span class="fa fa-angle-right"></span></button> 
          </div>
        </div>
      </div>
    </form>
  </div>
</section><!--b-search-->
